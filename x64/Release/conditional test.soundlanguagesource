halfstep = 2^(1/12);
step = halfstep * halfstep;

a1 = 27.5;
b1 = a1 * step;
c1 = b1 * halfstep;
cf1 = c1 * halfstep;
d1 = c1 * step;
e1 = d1 * step;
f1 = e1 * halfstep;
g1 = f1 * step;
gf1 = g1 * halfstep;

d = 5;
m = 3;

which = 0 # 1.9999;
which -= which % 1;


0, d * (1 - which);
key = b1 * 2^4;
sine r2, 1, key, 0;

0, d * (which);
key = d1 * 2^5;
sine r2, 1, key, 0;

'ADSR
0,1/128;
line r1, 0, 1;
+1/128;
fill r1, 1;
,d;
line r1, 0, -5;
exp r1, r1;
d-(1/128),d;
line r3, 1, 0;
mul r1, r1, r3;

0,d;
mul r0, r1, r2;