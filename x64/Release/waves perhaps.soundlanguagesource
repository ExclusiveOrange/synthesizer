duration = 10;
amplitude = 2;

' wave sound to r2
0, duration;
noise r2, 0-amplitude, amplitude;

' ADSR to r1
0, duration / 4;
line r1, 0, 1;
, duration;
line r1, 0, -7;
exp r1, r1;
duration - (1/128), duration;
line r3, 1, 0;
mul r1, r1, r3;

' apply ADSR to r2, store to r0
0, duration;
mul r0, r1, r2;